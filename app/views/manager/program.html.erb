<div class="cont">
  <h1>番組管理画面</h1>
  <%= link_to("ジャンル管理", "/manager/genre") %>
  <%= link_to("チャンネル管理", "/manager/channel") %>
  <%= link_to("番組管理", "/manager/program") %>
  <%= link_to("ユーザー管理", "/manager/user") %>
  <table border="1" width="1000" cellspacing="0" cellpadding="5" bordercolor="#333333">
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>日付</th>
        <th>開始時間</th>
        <th>概要</th>
        <th>メンバー</th>
        <th>ジャンル</th>
        <th>BAN</th>
      </tr>
    <% @program.each do |program| %>
      <tr>
        <form action="/manager/program_del" method="post">
          <td><%= program.id %></td>
          <td><%= program.p_title %></td>
          <td><%= program.day %></td>
          <td><%= program.start_time %></td>
          <td><%= program.about %></td>
          <td><%= program.member %></td>
          <td><%= Genre.select(:g_name).find_by(id: program.genre).g_name %></td>
          <td>
            <input type="hidden" name="p_id" value="<%= program.id %>">
            <input type="submit" value="削除">
          </td>
      </tr>
    <% end %>
  </table>
</div>
